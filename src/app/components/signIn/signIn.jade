div
  h1
    | {{ 'SIGN_IN_FORM.SIGN_IN' | translate }}
  form.form-inline.title(name="signInForm", ng-controller='signInController as signInCtrl', ng-submit='signInCtrl.signIn()', novalidate)
    .form-group.title
      label.control-label
        | {{ 'SIGN_IN_FORM.USERNAME' | translate }} * :
      input.form-control(ng-model='signInCtrl.signInForm.username', <type='text', name='username', title='Username', ng-minlength="8", ng-maxlength="64", required)
      br
      span.error(ng-show='signInForm.username.$touched && signInForm.username.$invalid')
        | {{ 'SIGN_UP_FORM.ERROR.NAME_LENGTH' | translate }}
    br
    .form-group.title
      label.control-label
        | {{ 'SIGN_IN_FORM.PASSWORD' | translate }} * :
      input.form-control(ng-model='signInCtrl.signInForm.password', type='password', name='password', title='Password', ng-minlength="8", ng-maxlength="32", required)
      br
      span.error(ng-show='signInForm.password.$touched && signInForm.password.$invalid')
        | {{ 'SIGN_IN_FORM.ERROR.PASSWORD_LENGTH' | translate }}
    .title
      input.btn.btn-info(type='submit', value="{{ 'SIGN_IN_FORM.SIGN_IN' | translate }}", ng-disabled='signInForm.$invalid')
